from tkinter import *

class Window(Frame):
    def __init__(self, master=None):
        Frame.__init__(self, master)
        self.master = master
        self.init_window()

    def init_window(self):
        self.master.title("pygame gui v1.0")
        self.pack(fill=BOTH, expand=1)

        quitButton = Button(self, text="QUIT GAME", command=self.client_exit)
        quitButton.place(x=5, y=450)

        startButton = Button(self, text="START GAME")
        startButton.place(x=5, y=5)

        testAnimation = Button(self, text="TEST ANIMATION")
        testAnimation.place(x=5, y= 225)

    def client_exit(self):
        exit()



root = Tk()
root.geometry("800x480")

app = Window(root)

root.mainloop()
